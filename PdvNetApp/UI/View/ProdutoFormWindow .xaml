<Window x:Class="PdvNetApp.UI.View.ProdutoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdvNetApp.UI.View"
        mc:Ignorable="d"
        Title="ProdutoFormWindow" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Nome:"/>
        <TextBox Grid.Row="0" Margin="80 0 0 10"
                 Text="{Binding Produto.Nome, UpdateSourceTrigger=PropertyChanged}" Width="220"/>

        <Label Grid.Row="1" Content="Preço:"/>
        <TextBox Grid.Row="1" Margin="80 0 0 10"
                 Text="{Binding Produto.Preco, UpdateSourceTrigger=PropertyChanged}" Width="220"/>

        <Label Grid.Row="2" Content="Quantidade:"/>
        <TextBox Grid.Row="2" Margin="80 0 0 10"
                 Text="{Binding Produto.Quantidade, UpdateSourceTrigger=PropertyChanged}" Width="220"/>

        <Button Grid.Row="3" Content="Salvar"
                Width="100" Height="50" Margin="0 10 0 0"
                HorizontalAlignment="Right"
                Command="{Binding SalvarCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>
