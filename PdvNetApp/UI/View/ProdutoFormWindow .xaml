<Window x:Class="PdvNetApp.UI.View.ProdutoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdvNetApp.UI.View"
        xmlns:conv="clr-namespace:PdvNetApp.UI.Converters"
        mc:Ignorable="d"
        Title="ProdutoFormWindow"
        Height="250" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <conv:DecimalConverter x:Key="DecimalConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Nome:"/>
        <TextBox Grid.Row="0" Margin="80 0 0 10"
                 Text="{Binding Produto.Nome, UpdateSourceTrigger=PropertyChanged}"
                 Width="220"
                 AutomationProperties.IsRequiredForForm="True"
                 AutomationProperties.IsRowHeader="True"
                 AutomationProperties.Name="Digite o nome do produto"/>

        <Label Grid.Row="1" Content="Preço:"/>
        <TextBox Grid.Row="1" Margin="80 0 0 10"
                 Text="{Binding Produto.Preco, Converter={StaticResource DecimalConverter}, UpdateSourceTrigger=PropertyChanged}"
                 Width="220"
                 AutomationProperties.HelpText="Digite o preço do produto"
                 TextWrapping="Wrap"/>

        <Label Grid.Row="2" Content="Quantidade:"/>
        <TextBox Grid.Row="2" Margin="80 0 0 10"
                 Text="{Binding Produto.Quantidade, UpdateSourceTrigger=PropertyChanged}"
                 Width="220"/>

        <Label Grid.Row="3" Content="Descrição:"/>
        <TextBox Grid.Row="3" Margin="80 0 0 10"
                 Text="{Binding Produto.Descricao, UpdateSourceTrigger=PropertyChanged}"
                 Width="220"
                 AutomationProperties.IsRequiredForForm="True"
                 AutomationProperties.IsRowHeader="True"
                 AutomationProperties.Name="Digite o nome do produto"/>

            <Button Grid.Row="4"
                Content="Salvar"
                Width="100"
                Height="50"
                Margin="0 10 0 0"
                HorizontalAlignment="Center"
                Command="{Binding SalvarCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>
