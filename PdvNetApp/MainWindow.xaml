<Window x:Class="PdvNetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdvNetApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="563*"/>
            <ColumnDefinition Width="238*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Margin="10,10,10,10" Grid.ColumnSpan="2">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
                <Button Content="Novo" Command="{Binding NovoCommand}" Margin="0 0 5 0"/>
                <Button Content="Editar" Command="{Binding EditarCommand}" Margin="0 0 5 0"/>
                <Button Content="Excluir" Command="{Binding ExcluirCommand}"  Margin="0 0 5 0"/>
                <Button Content="Dashboard" Command="{Binding AbrirDashboardCommand}" Margin="0 0 0 0"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding Produtos}"
                  SelectedItem="{Binding Selecionado}"
                  AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="Descricao" Binding="{Binding Descricao}" Width="*"/>
                    <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="*"/>
                    <DataGridTextColumn Header="Qtd" Binding="{Binding Quantidade}" Width="50"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
